<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1E78E"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Registration"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:padding="20dp"
        android:background="#F3E358"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/email"
        android:padding="20dp"
        android:hint="Insert your email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/password"
        android:padding="20dp"
        android:hint="Insert password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister"
            android:text="Register"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:background="#1CDA23"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:background="#EC1A0B"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLogin"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="30dp"
        android:text="Already registered? Click here to login"/>

</LinearLayout>